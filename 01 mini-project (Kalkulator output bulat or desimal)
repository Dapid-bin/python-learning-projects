def bulat():
	print("===== [BULAT]")
	print(f'{a} + {b} = {tambah}')
	print(f'{a} - {b} = {kurang}')
	print(f'{a} * {b} = {kali}')
	print(f'{a} // {b} = {bagi_bulat}')
	print(f'{a} % {b} = {modulus}')
	print(f'{a} ** {b} = {pangkat}')

def desimal():
	print("===== [DESIMAL]")
	print(f'{a} + {b} = {float(tambah)}')
	print(f'{a} - {b} = {float(kurang)}')
	print(f'{a} * {b} = {float(kali)}')
	print(f'{a} / {b} = {float(bagi_desimal)}')
	print(f'{a} % {b} = {float(modulus)}')
	print(f'{a} ** {b} = {float(pangkat)}')

def all():
	print("===== [BULAT]")
	print(f'{a} + {b} = {tambah}')
	print(f'{a} - {b} = {kurang}')
	print(f'{a} * {b} = {kali}')
	print(f'{a} // {b} = {bagi_bulat}')
	print(f'{a} % {b} = {modulus}')
	print(f'{a} ** {b} = {pangkat}')
	
	print("===== [DESIMAL]")
	print(f'{a} + {b} = {float(tambah)}')
	print(f'{a} - {b} = {float(kurang)}')
	print(f'{a} * {b} = {float(kali)}')
	print(f'{a} / {b} = {float(bagi_desimal)}')
	print(f'{a} % {b} = {float(modulus)}')
