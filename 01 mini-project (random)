#=====3. KONVERSI FIAT
def konversi_fiat_3():
	saldo = int(input("Saldo kamu: Rp."))
	kon = int(input("mau dikonversi berapa: Rp."))
	USD = kon / 16000
	apa_saldo_cukup = kon >= saldo
	if apa_saldo_cukup and True:
		print(f"tidak dapat mengkonversi karena saldo {name.capitalize()} hanya sebesar Rp.{saldo} Limit: {saldo - kon}")
	elif not apa_saldo_cukup and True:
		print(f"Rp.{kon} sama dengan {USD} USD")
	else:
		pass

#====GET FITUR & OUTPUT FITUR
match ghost[0]:
	case "ARITMATIKA":
		aritmatika_1()
	case "PERBANDINGAN":
		perbandingan_2()
	case "KONVERSI FIAT":
		konversi_fiat_3()
	case _:
		print("Sory fitur", ghost[0], "Not True")